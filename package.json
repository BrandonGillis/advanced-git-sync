{
  "name": "@opensaucedhub/git-sync-action",
  "description": "Synchronize GitHub repository with GitLab including branches, PRs, and issues",
  "version": "1.1.1",
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/",
    "provenance": true
  },
  "main": "dist/index.js",
  "scripts": {
    "build": "rimraf dist && ncc build src/index.ts -o dist --source-map",
    "lint": "eslint src/**/*.ts",
    "f": "prettier --write \"**/*.*\"",
    "prepare": "husky",
    "test": "jest"
  },
  "keywords": [
    "github",
    "actions",
    "gitlab",
    "automation"
  ],
  "author": "vikshan",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/OpenSaucedHub/git-sync-action.git"
  },
  "bugs": {
    "url": "https://github.com/OpenSaucedHub/git-sync-action/issues"
  },
  "homepage": "https://github.com/OpenSaucedHub/git-sync-action#readme",
  "dependencies": {
    "@actions/core": "^1.11.1",
    "@actions/github": "^6.0.0",
    "@gitbeaker/rest": "^41.3.0",
    "@octokit/rest": "^21.0.2",
    "js-yaml": "^4.1.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@eslint/js": "^9.15.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^13.0.0",
    "@semantic-release/exec": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^11.0.1",
    "@semantic-release/npm": "^12.0.1",
    "@semantic-release/release-notes-generator": "^14.0.1",
    "@types/jest": "^29.5.14",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^22.10.0",
    "@typescript-eslint/eslint-plugin": "^8.16.0",
    "@typescript-eslint/parser": "^8.16.0",
    "@vercel/ncc": "^0.38.3",
    "@zeit/ncc": "^0.22.3",
    "axios": "^1.7.8",
    "bun-types": "^1.1.37",
    "conventional-changelog-conventionalcommits": "^8.0.0",
    "conventional-changelog-gitmoji": "^0.2.5",
    "dotenv": "^16.4.5",
    "eslint": "^9.15.0",
    "globals": "^15.12.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "prettier": "^3.4.1",
    "semantic-release": "^24.2.0",
    "semantic-release-gitmoji": "^1.6.8",
    "ts-jest": "^29.2.5",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.16.0"
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended"
    ],
    "rules": {
      "@typescript-eslint/no-require-imports": "error",
      "@typescript-eslint/no-unused-vars": "error",
      "@typescript-eslint/no-explicit-any": "error"
    }
  }
}
