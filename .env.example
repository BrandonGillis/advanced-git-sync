# Advanced Git Sync - Local Development Environment Variables
# Copy this file to .env and fill in your actual tokens

# GitHub Configuration
GITHUB_TOKEN=your_github_token_here
# Example: GITHUB_TOKEN=ghp_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# GitLab Configuration  
GITLAB_TOKEN=your_gitlab_token_here
# Example: GITLAB_TOKEN=glpat-xxxxxxxxxxxxxxxxxxxx

# Repository Configuration (optional - can be set in config file instead)
GITHUB_OWNER=your_github_username
GITHUB_REPO=your_repo_name
GITLAB_OWNER=your_gitlab_username  
GITLAB_REPO=your_repo_name
GITLAB_PROJECT_ID=your_gitlab_project_id

# Configuration File Path (optional)
CONFIG_PATH=.github/sync-config.yml

# Development Settings
NODE_ENV=development
DEBUG=true

# GitHub Actions Simulation (for local testing)
INPUT_GITHUB_TOKEN=${GITHUB_TOKEN}
INPUT_GITLAB_TOKEN=${GITLAB_TOKEN}
INPUT_CONFIG_PATH=${CONFIG_PATH}

# Repository Context Simulation (when running locally)
GITHUB_REPOSITORY=${GITHUB_OWNER}/${GITHUB_REPO}
GITHUB_REF=refs/heads/main
GITHUB_SHA=local-development
